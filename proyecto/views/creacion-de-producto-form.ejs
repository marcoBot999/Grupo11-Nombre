<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("./partials/head.ejs")%>
        <link rel="stylesheet" href="/css/register-styles.css">
</head>

<body background="/images/fondo-create-product.jpg">

    <%- include ("./partials/header.ejs")%>

        <main class="formulario">

            <form action="/productos/creacion-de-producto" method="POST" class="formProductos"
                enctype="multipart/form-data" charset=utf-8>

                <div class="form-control">
                    <label for="name">Nombre del Producto</label>
                    <input type="text" id="name" name="name" placeholder="Ej:Motherboard MSI A320M-A PRO MAX AMD AM4"
                        value="<%= locals.old && old.name ? old.name:'' %>">
                    <% if (locals.errors && errors.name) { %>
                        <div class="errores">
                            <%= errors.name.msg%>
                        </div>
                        <% } %>
                            <p class="errores"></p>
                </div>
                <br>
                <div class="form-control">
                    <label for="description">Descripción</label>
                    <textarea name="description" id="description"></textarea value="<%= locals.old && old.description ? old.description:'' %>" >
                        <% if (locals.errors && errors.description) { %>
                            <div class="errores">
                                <%= errors.description.msg%>
                            </div>
                            <% } %>
                        <p class="errores"></p>
                </div>
                <br>
                <div>
                    <label for="price">Precio</label>
                    <input type="number" id="price" name="price" placeholder="Precio">
                </div>
                <br>
                <div>
                    <label>Categoría</label>
                    <select name="category" class="categoria">
                        <option value="none">---</option>
                        <% for(let i=0; i< categorias.length; i++) { %>
                            <option value="<%= categorias[i].id_product_category %>">
                                <%= categorias[i].name_category %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <br>
                <div class="form-control">
                    <label for="img">Foto del Producto</label>
                    <input type="file" id="img" name="img" accept=".jpg,.png">
                    <p class="errores"></p>
                </div>
                <br>
                <div class="buttonReg">
                    <button type="submit">Publicar</button>
                    <button type="reset">Cancelar</button>
                </div>
            </form>
        </main>
        <%- include ("./partials/footer.ejs")%>
        <script src="/js/validacionesProductos.js"> </script>
</body>

</html>