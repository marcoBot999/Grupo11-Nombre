<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("./partials/head.ejs")%>
        <link rel="stylesheet" href="/css/register-styles.css">
</head>

<body background="/images/fondo-register.jpg">

    <%- include ("./partials/header.ejs")%>

        <main class="formulario">
            <br>
            <form action="/user/register" method="POST" enctype="multipart/form-data" charset=utf-8>
                <div>
                    <label for="firstname">Nombre</label>
                    <input type="text" name="firstname" id="firstname"
                        value="<%= locals.old && old.firstname ? old.firstname:'' %>" placeholder="John" required>
                    <% if (locals.errors && errors.firstname) { %>
                        <div class="errores">
                            <%= errors.firstname.msg%>
                        </div>
                        <% } %>
                </div>
                <br>
                <div>
                    <label for="lastname">Apellido</label>
                    <input type="text" id="lastname" name="lastname" placeholder="Doe"
                        value="<%= locals.old && old.lastname ? old.lastname:'' %>"  required>
                    <% if (locals.errors && errors.lastname) { %>
                        <div class="errores">
                            <%= errors.lastname.msg%>
                        </div>
                        <% } %>
                </div>
                <br>
                <div>
                    <label for="email">E-mail</label>
                    <input type="email" id="email" name="email" placeholder="correo@correo.com"
                        value="<%= locals.old && old.email ? old.email:'' %>"  required>
                    <% if (locals.errors && errors.email) { %>
                        <div class="errores">
                            <%= errors.email.msg%>
                        </div>
                        <% } %>
                </div>
                <br>
                <div>
                    <label for="birthday">Fecha de Nacimiento</label>
                    <input type="date" id="birthday" name="birthday"
                        value="<%= locals.old && old.birthday ? old.birthday:'' %>"  required>
                    <% if (locals.errors && errors.birthday) { %>
                        <div class="errores">
                            <%= errors.birthday.msg%>
                        </div>
                        <% } %>
                </div>
                <br>
                <div>
                    <label for="address">Domicilio</label>
                    <input type="text" id="address" name="address" placeholder="calle 3 # 3-33"
                        value="<%= locals.old && old.address ? old.address:'' %>"  required>
                    <% if (locals.errors && errors.address) { %>
                        <div class="errores">
                            <%= errors.address.msg%>
                        </div>
                        <% } %>
                </div>
                <br>
                <div>
                    <label for="password">Contrase単a</label>
                    <input type="password" id="password" name="password" placeholder="Contrase単a" minlength="5"  required>
                    <% if (locals.errors && errors.password) { %>
                        <div class="errores">
                            <%= errors.password.msg%>
                        </div>
                        <% } %>
                </div>
                <br>
                <div>
                    <label for="confirmPassword">Confirmar Contrase単a</label>
                    <input type="password" id="confirmPassword" name="confirmPassword"
                        placeholder="Confirmar Contrase単a"  required>
                    <% if (locals.errors && errors.confirmPassword) { %>
                        <div class="errores">
                            <%= errors.confirmPassword.msg%>
                        </div>
                        <% } %>
                </div>
                <br>
                <div>
                    <label>Tipo de Usuario</label>
                    <select name="type" class="categoria">
                        <option value="1">Comprador</option>
                        <option value="2">Vendedor</option>
                    </select>
                </div>
                <br>
                <div>
                    <label for="img">Foto de Perfil</label>
                    <input type="file" id="img" name="img" accept=".jpg,.png"  required>
                </div>
                <br>
                <div class="buttonReg">
                    <button type="submit">Registrarse</button>
                    <button type="reset">Cancelar</button>
                </div>
            </form>
        </main>

        <%- include ("./partials/footer.ejs")%>
</body>

</html>